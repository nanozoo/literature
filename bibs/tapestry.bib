	author = {Davey, John W. and Davis, Seth J. and Mottram, Jeremy C. and Ashton, Peter D.},
	title = {Tapestry: validate and edit small eukaryotic genome assemblies with long reads},
	elocation-id = {2020.04.24.059402},
